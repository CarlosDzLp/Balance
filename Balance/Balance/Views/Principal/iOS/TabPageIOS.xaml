<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Balance.Views.Principal.iOS.TabPageIOS"
    xmlns:page="clr-namespace:Balance.Views.Principal.iOS.PagesTab;assembly=Balance"
    xmlns:badge="clr-namespace:Balance.Controls;assembly=Balance"
    BackgroundColor="White"   
    Title="{Binding TitlePage}" 
    BarBackgroundColor="White"
    BarTextColor="Black">
        <page:HomePage/>
        <page:SearchPage/>
        <page:MessagePage
            badge:TabBadge.BadgeText="2"
            badge:TabBadge.BadgeColor="Red"
            badge:TabBadge.BadgeTextColor="White"/>
        <page:AcountPage/>
</TabbedPage>
